{
  "name": "GK-Nexus",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@orpc/server": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.4.0",
      "dotenv": "^17.2.2",
      "@orpc/client": "^1.10.0"
    }
  },
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "check": "biome check --write .",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @GK-Nexus/db db:push",
    "db:studio": "turbo -F @GK-Nexus/db db:studio",
    "db:generate": "turbo -F @GK-Nexus/db db:generate",
    "db:migrate": "turbo -F @GK-Nexus/db db:migrate",
    "db:seed": "turbo -F @GK-Nexus/db db:seed",
    "db:start": "turbo -F @GK-Nexus/db db:start",
    "db:watch": "turbo -F @GK-Nexus/db db:watch",
    "db:stop": "turbo -F @GK-Nexus/db db:stop",
    "db:down": "turbo -F @GK-Nexus/db db:down",
    "init": "tsx scripts/init-system.ts",
    "init:system": "tsx scripts/init-system.ts",
    "test": "turbo run test",
    "test:unit": "turbo run test --filter='@GK-Nexus/api' --filter='web'",
    "test:integration": "turbo run test:integration --filter='@GK-Nexus/api'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "test:ci": "bun run test:unit && bun run test:integration && bun run test:e2e",
    "test:accessibility": "turbo -F web test:a11y",
    "test:performance": "playwright test --grep='Performance'",
    "test:security": "playwright test --grep='Security'",
    "test:visual": "playwright test --config=playwright.visual.config.ts --headed",
    "test:visual:headless": "playwright test --config=playwright.visual.config.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@biomejs/biome": "2.3.7",
    "@playwright/test": "^1.57.0",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/bun": "^1.2.6",
    "axe-playwright": "^2.2.2",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.1.2",
    "playwright": "^1.57.0",
    "turbo": "^2.5.4",
    "ultracite": "6.3.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.2.18"
}
