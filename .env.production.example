# ============================================
# GK-Nexus Production Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
#
# Quick Start:
#   cp .env.production.example .env
#   # Edit .env with your values
#   docker compose -f docker-compose.prod.yml up -d
#
# Required variables are marked with [REQUIRED]
# ============================================

# ===========================================
# Database Configuration [REQUIRED]
# ===========================================
DATABASE_NAME=gk_nexus
DATABASE_USER=postgres
DATABASE_PASSWORD=YourSecurePassword123!    # [REQUIRED] Change this!

# ===========================================
# Authentication [REQUIRED]
# ===========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=generate-a-32-character-secret-here    # [REQUIRED]
BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# Redis Cache
# ===========================================
# Leave empty for no password (not recommended for production)
REDIS_PASSWORD=

# ===========================================
# Application Ports
# ===========================================
SERVER_PORT=3000
WEB_PORT=3001

# ===========================================
# CORS & API Configuration
# ===========================================
CORS_ORIGIN=http://localhost:3001
VITE_API_URL=http://localhost:3000

# ===========================================
# Super Admin Account [REQUIRED for first setup]
# ===========================================
SUPER_ADMIN_EMAIL=admin@gk-nexus.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!    # [REQUIRED] Change this!
SUPER_ADMIN_NAME=Super Administrator

# ===========================================
# JWT & Security
# ===========================================
JWT_SECRET=another-secure-secret-here
BCRYPT_ROUNDS=12

# ===========================================
# Session Configuration
# ===========================================
SESSION_MAX_AGE=7d
SESSION_UPDATE_AGE=24h

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@gk-nexus.com

# ===========================================
# GRA Integration (Optional)
# ===========================================
GRA_API_KEY=your_gra_api_key
GRA_API_URL=https://api.gra.gov.gy

# ===========================================
# File Upload
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png
STORAGE_PATH=./uploads

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true
AUDIT_RETENTION_DAYS=365

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Docker Image Version
# ===========================================
VERSION=latest

# ===========================================
# Production Domain (Optional - for nginx/SSL)
# ===========================================
# DOMAIN=gknexus.com
# SSL_EMAIL=admin@gknexus.com

# ===========================================
# Backup Configuration (Optional)
# ===========================================
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1
