# GK-Nexus Production Environment Configuration
# =============================================
#
# Copy this file to .env.production and fill in the required values
# IMPORTANT: Never commit the actual .env.production file to version control

# Database Configuration
POSTGRES_DB=gk_nexus_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Application Configuration
NODE_ENV=production
SERVER_PORT=3000
WEB_PORT=80
FRONTEND_URL=https://your-domain.com

# Security Configuration
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# API Keys for Guyana Revenue Authority Integration
GRA_API_KEY=your_gra_api_key_here
GRA_API_URL=https://api.gra.gov.gy

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@your-domain.com
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# SMS Service Configuration (for notifications)
SMS_SERVICE_API_KEY=your_sms_service_api_key
SMS_SERVICE_URL=https://api.your-sms-provider.com

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=/app/logs

# Data Persistence Paths
DATA_PATH=./data

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_COMPLIANCE_MONITORING=true
ENABLE_AUTOMATIC_BACKUPS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_minimum_32_characters
SESSION_TIMEOUT=3600