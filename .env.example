# =================================
# GK-Nexus Environment Configuration
# =================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/gk_nexus"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="gk_nexus"
DATABASE_USER="your_db_user"
DATABASE_PASSWORD="your_db_password"

# Authentication Configuration
BETTER_AUTH_SECRET="your-super-secret-key-min-32-chars"
BETTER_AUTH_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3001"

# Session Configuration
SESSION_MAX_AGE="7d"
SESSION_UPDATE_AGE="24h"

# Super Admin Configuration
SUPER_ADMIN_EMAIL="admin@gk-nexus.com"
SUPER_ADMIN_PASSWORD="SuperSecure123!"
SUPER_ADMIN_NAME="Super Administrator"

# Email Configuration (for user invitations and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@gk-nexus.com"

# Application Configuration
NODE_ENV="development"
PORT="3000"
WEB_PORT="3001"

# Security Configuration
CORS_ORIGIN="http://localhost:3001"
BCRYPT_ROUNDS="12"

# File Storage Configuration
UPLOAD_MAX_SIZE="10485760" # 10MB
UPLOAD_ALLOWED_TYPES="pdf,doc,docx,xls,xlsx,jpg,jpeg,png"
STORAGE_PATH="./uploads"

# Redis Configuration (optional, for session store)
REDIS_URL="redis://localhost:6379"

# Audit Configuration
ENABLE_AUDIT_LOGS="true"
AUDIT_RETENTION_DAYS="365"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"